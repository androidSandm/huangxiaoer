<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f8f8f8"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"></android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout">
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@mipmap/me_tou"
            android:text="确认订单"
            android:textSize="17.5dp"
            android:textColor="#464646"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="￥ 15"
            android:textSize="20dp"
            android:textColor="#ff6400"
            android:layout_marginLeft="87.5dp"


            />

    </RelativeLayout>
    <ImageView
        android:id="@+id/img_protruding"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22.5dp"
        android:src="@mipmap/shop1" />
</RelativeLayout>
