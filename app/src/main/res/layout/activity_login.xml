<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.boylucky.myfirst.view.activity.LoginActivity">
<ImageView
    android:id="@+id/logo"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:src="@mipmap/logo"
    android:scaleType="fitXY"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/c_ll"
        android:visibility="visible"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/user_icon"
                />
            <EditText
                android:id="@+id/tel_edit"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:ems="15"
                android:hint="请输入手机号码"
                android:layout_toRightOf="@+id/img"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/verification"
                />
            <EditText
                android:id="@+id/pwd_edit"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:ems="10"
                android:hint="请输入验证码"
                android:layout_toRightOf="@+id/img2"
                />
            <TextView
                android:id="@+id/duanxin"
                android:layout_width="100dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_height="40dp"
                android:background="@mipmap/one_verification"
                android:src="@mipmap/one_verification"
                android:layout_toRightOf="@id/pwd_edit"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/c_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@mipmap/login"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/c_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用常规登录方式"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="#ffd300"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/y_ll"
        android:layout_weight="1"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/user_icon"
                />
            <EditText
                android:id="@+id/tel_edit3"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:ems="15"
                android:hint="请输入手机号码"
                android:layout_toRightOf="@+id/img3"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/pass_icon"
                />
            <EditText
                android:id="@+id/pwd_edit4"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:ems="12"
                android:hint="请输入密码"
                android:layout_toRightOf="@+id/img4"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@mipmap/pwd"
                android:layout_toRightOf="@id/pwd_edit4"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/y_login"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@mipmap/login"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/y_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="短信验证码登录方式"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="#ffd300"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:gravity="center"
            android:textColor="#999999"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/qq"
                />
            <ImageView
                android:id="@+id/weixin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/wchar"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
