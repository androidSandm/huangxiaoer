<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f8f8f8"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


<RelativeLayout
    android:background="@mipmap/me_tou"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/d"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/ss"
        android:layout_alignLeft="@+id/ss"
        android:layout_alignStart="@+id/ss"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/dingwei" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/d"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/d"

        android:layout_toRightOf="@+id/d"
        android:text="中共中央电视台"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/d"
        android:layout_alignEnd="@+id/ss"
        android:layout_alignRight="@+id/ss"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:src="@mipmap/xiathree" />
<RelativeLayout
    android:id="@+id/ss"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    android:background="@mipmap/shou"
    android:layout_marginRight="20dp"
    android:gravity="center"
    android:layout_marginLeft="20dp"
    >
    <ImageView
        android:id="@+id/sousuo_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/sousuo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sousuo"
        android:text="搜索店铺,菜品名称"
        android:textSize="20dp"
        android:layout_toRightOf="@id/sousuo_img"
        android:gravity="center"
        android:textColor="#999999"

        />
    </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="附近商家"
        android:textSize="16dp"
        android:textColor="#999999"
        android:layout_margin="10dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/xrlv"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
    </ScrollView>
</LinearLayout>
